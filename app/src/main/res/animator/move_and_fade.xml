<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:ordering="sequentially">
    <objectAnimator
        android:duration="2000"
        android:interpolator="@android:anim/linear_interpolator">
        <propertyValuesHolder
            android:propertyName="translationX"
            android:valueTo="0" />
        <propertyValuesHolder
            android:propertyName="translationY"
            android:valueTo="800" />
    </objectAnimator>

    <objectAnimator android:duration="1000"
        android:propertyName="textColor"
        android:valueFrom="@color/uwPurple"
        android:valueTo="@color/uwMetallicGold" />
    <objectAnimator
        android:duration="1000"
        android:interpolator="@android:anim/linear_interpolator"
        android:propertyName="alpha"
        android:valueFrom="1.0"
        android:valueTo="0.5" />

    <objectAnimator
        android:duration="2000"
        android:interpolator="@android:anim/linear_interpolator">
        <propertyValuesHolder
            android:propertyName="translationX"
            android:valueTo="-400" />
        <propertyValuesHolder
            android:propertyName="translationY"
            android:valueTo="0" />
    </objectAnimator>

    <objectAnimator
        android:duration="2000"
        android:interpolator="@android:anim/linear_interpolator">
        <propertyValuesHolder
            android:propertyName="translationX"
            android:valueTo="0" />
        <propertyValuesHolder
            android:propertyName="translationY"
            android:valueTo="0" />
    </objectAnimator>

    objectAnimator android:duration="1000"
    android:propertyName="textColor"
    android:valueFrom="@color/uwMetallicGold"
    android:valueTo="@color/uwPurple" />
    <objectAnimator
        android:duration="1000"
        android:interpolator="@android:anim/linear_interpolator"
        android:propertyName="alpha"
        android:valueFrom="0.5"
        android:valueTo="1.0" />

    <objectAnimator
        android:duration="500"
        android:interpolator="@android:anim/linear_interpolator">
        <propertyValuesHolder
            android:propertyName="translationX"
            android:valueTo="0" />
        <propertyValuesHolder
            android:propertyName="translationY"
            android:valueTo="-700" />
    </objectAnimator>

    <objectAnimator
        android:duration="500"
        android:interpolator="@android:anim/linear_interpolator">
        <propertyValuesHolder
            android:propertyName="translationX"
            android:valueTo="0" />
        <propertyValuesHolder
            android:propertyName="translationY"
            android:valueTo="0" />
    </objectAnimator>
</set>